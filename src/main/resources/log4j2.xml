<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
        <Property name="LOG_DIR">logs</Property>
    </Properties>

    <Appenders>
        <!-- Console -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}" />
        </Console>

        <!-- TÁCH THEO NGÀY + KHÔNG GIỚI HẠN FILE -->
        <RollingFile name="DailyFile"
                     fileName="${LOG_DIR}/app.log"
                     filePattern="${LOG_DIR}/app-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN}" />

            <!-- Chính sách cuộn file -->
            <Policies>
                <!-- Cuộn theo NGÀY -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <!-- Cuộn khi file > 10MB -->
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>

            <!-- KHÔNG GIỚI HẠN SỐ FILE → XÓA max và Delete -->
            <DefaultRolloverStrategy>
                <!-- Không có max, không xóa file cũ -->
            </DefaultRolloverStrategy>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="org.datapipeline" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="DailyFile"/>
        </Logger>

        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="DailyFile"/>
        </Root>
    </Loggers>
</Configuration>